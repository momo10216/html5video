<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.2" method="upgrade" group="content">
	<name>PLG_NOK_HTML5VIDEO_APP_NAME</name>
	<author>Norbert Kuemin</author>
	<creationDate>October 2017</creationDate>
	<copyright>(C) 2015 Norbert Kuemin. All rights reserved.</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>momo_102@bluemail.ch</authorEmail>
	<authorUrl>http://kuem.in/</authorUrl>
	<version>4.0.0</version>
	<description>PLG_NOK_HTML5VIDEO_APP_DESC</description>
	<files>
		<filename plugin="nokhtml5video">nokhtml5video.php</filename>
	</files>
	<languages folder="language">
		<language tag="de-DE">de-DE.plg_content_nokhtml5video.ini</language>
		<language tag="de-DE">de-DE.plg_content_nokhtml5video.sys.ini</language>
		<language tag="en-GB">en-GB.plg_content_nokhtml5video.ini</language>
		<language tag="en-GB">en-GB.plg_content_nokhtml5video.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="width" type="text" default="640" label="PLG_NOK_HTML5VIDEO_WIDTH_LABEL" description="PLG_NOK_HTML5VIDEO_WIDTH_DESC" size="3" />
				<field name="height" type="text" default="264" label="PLG_NOK_HTML5VIDEO_HEIGHT_LABEL" description="PLG_NOK_HTML5VIDEO_HEIGHT_DESC" size="3" />
				<field name="controls" type="radio" default="1" label="PLG_NOK_HTML5VIDEO_CONTROLS_LABEL" description="PLG_NOK_HTML5VIDEO_CONTROLS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="autoplay" type="radio" default="0" label="PLG_NOK_HTML5VIDEO_AUTOPLAY_LABEL" description="PLG_NOK_HTML5VIDEO_AUTOPLAY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="muted" type="radio" default="0" label="PLG_NOK_HTML5VIDEO_MUTED_LABEL" description="PLG_NOK_HTML5VIDEO_MUTED_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="preload" type="list" default="0" label="PLG_NOK_HTML5VIDEO_PRELOAD_LABEL" description="PLG_NOK_HTML5VIDEO_PRELOAD_DESC">
					<option value="auto">auto</option>
					<option value="metadata">metadata</option>
					<option value="none">JNO</option>
				</field>
				<field name="loop" type="radio" default="0" label="PLG_NOK_HTML5VIDEO_LOOP_LABEL" description="PLG_NOK_HTML5VIDEO_LOOP_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="poster_visibility" type="radio" default="1" label="PLG_NOK_HTML5VIDEO_POSTER_VISIBILITY_LABEL"
					description="PLG_NOK_HTML5VIDEO_POSTER_VISIBILITY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="nocontextmenu" type="radio" default="0" label="PLG_NOK_HTML5VIDEO_NO_CONTEXT_MENU_LABEL"
					description="PLG_NOK_HTML5VIDEO_NO_CONTEXT_MENU_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="nosupport" type="text" default="Your browser does not support HTML5 audio + video." label="PLG_NOK_HTML5VIDEO_NO_SUPPORT_LABEL"
					description="PLG_NOK_HTML5VIDEO_NO_SUPPORT_DESC" size="70" />
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="2" name="HTML5 Media Updates">http://kuem.in/joomlaupdate/plg_nokhtml5video.xml</server>
	</updateservers>
</extension>
